{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": [
        "dom",
        "es6",
        "es2017",
        "esnext.asynciterable"
      ],
      "sourceMap": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "removeComments": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "."
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.test.ts"
    ],
    "include": [
      "./node_modules/@types",
      "./src/**/*.ts"
    ]
  }